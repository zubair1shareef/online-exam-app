<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_quiz_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:contentPadding="10dp"
        android:elevation="@dimen/cardview_default_elevation"
        app:cardMaxElevation="5dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/colorAccent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvQuestion_listitem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question"
                style="@style/BodyLargeBold"
                android:textColor="@color/colorPrimary"
                android:singleLine="false" />

            <Button
                android:id="@+id/btnOption1_listitem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 1"
                android:background="@drawable/option_normal"
                android:layout_marginTop="10dp"
                style="@style/BodyMediumReg"
                android:textAllCaps="false"
                android:textAlignment="viewStart"
                android:padding="10dp"
                android:singleLine="false"/>

            <Button
                android:id="@+id/btnOption2_listitem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 2"
                android:background="@drawable/option_normal"
                android:layout_marginTop="10dp"
                style="@style/BodyMediumReg"
                android:textAllCaps="false"
                android:textAlignment="viewStart"
                android:padding="10dp"
                android:singleLine="false"/>

            <Button
                android:id="@+id/btnOption3_listitem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 3"
                android:background="@drawable/option_normal"
                android:layout_marginTop="10dp"
                style="@style/BodyMediumReg"
                android:textAllCaps="false"
                android:textAlignment="viewStart"
                android:padding="10dp"
                android:singleLine="false"/>

            <Button
                android:id="@+id/btnOption4_listitem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 4"
                android:background="@drawable/option_normal"
                android:layout_marginTop="10dp"
                style="@style/BodyMediumReg"
                android:textAllCaps="false"
                android:textAlignment="viewStart"
                android:padding="10dp"
                android:singleLine="false"/>

            <Button
                android:id="@+id/btnQuestionDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Question"
                android:background="@drawable/login_bottons"
                style="@style/BodyMediumBold"
                android:textColor="@color/white"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_delete_forever_white_24dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>